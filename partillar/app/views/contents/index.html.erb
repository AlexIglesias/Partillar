<% if flash[:notice] %>
	<p><%= flash[:notice]  %></p>
<% end %>
<% @curated_content.each do |content| %>
	<table>
		<thead>
			<tr>
				<th>Titulo</th>
				<th>Fuente</th>
				<th>Descripción</th>
				<th >Categoría</th>
				<th >Localización</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			
				<tr>
					<td><%= content.title %></td>
					<td><%= content.source %></td>
					<td><%= content.description %></td>
					<td><%= content.category.name %></td>
					<td><%= content.location.name %></td>
					<td><%= link_to 'Show', content %></td>
				</tr>
			
		</tbody>
		
	</table>

	
<% end %>
<%= link_to 'New', new_content_path %>