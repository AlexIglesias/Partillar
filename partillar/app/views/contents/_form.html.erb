<%= form_for @content do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :source %><br>
    <%= f.text_field :source %>
  </div>
   <div class="field">
    <%= f.label :media_url %><br>
    <%= f.text_field :media_url %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>