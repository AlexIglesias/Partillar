<%= form_for @content, html: {class:"uk-form uk-form-horizontal"} do |f| %>
  <legend></legend>
  <div class="uk-form-row">
    <%= f.label :Titulo, class: "uk-form-label" %>
    <%= f.text_field :title, class: "uk-width-1-1" %>
  </div>
  <div class="uk-form-row">
    <%= f.label :Categoría, class: "uk-form-label" %>
    <%= f.collection_select :category_id, Category.all , :id, :name, {prompt: 'Escoge una Categoría'}, class: "uk-form-select" %>
  </div>
  <div class="uk-form-row">
    <%= f.label :Fuente, class: "uk-form-label" %>
    <%= f.text_field :source, class: "uk-width-1-1" %>
  </div>
   <div class="uk-form-row">
    <%= f.label :Url, class: "uk-form-label" %>
    <%= f.text_field :media_url, class: "uk-width-1-1" %>
  </div>
  <div class="uk-form-row">
    <%= f.label :Descripción, class: "uk-form-label" %>
    <%= f.text_area :description, class: "uk-width-1-1", rows: "5" %>
  </div>
  <div class="uk-form-row">
    <%= f.label :Localización, class: "uk-form-label" %>
    <%= f.text_field :location, class: "uk-width-1-1" %>
  </div>
  <div class="uk-form-row">
    <div>
      <%= recaptcha_tags %> 
    </div>
  </div>
    
  <div class="uk-form-row">
    <%= f.submit 'Enviar', class: 'uk-button uk-width-1-1 uk-button-large uk-button-primary' %>
  </div>
<% end %>