<div class="uk-width-medium-2-3 uk-container-center">
  <div class="uk-panel">
    <article class="uk-article">
      <h1 class="uk-article-title uk-text-center">Iniciar sesión</h1>
      <hr class="uk-article-divider">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="uk-form-row">
          <div class="uk-row">
            <div class="uk-container">
              <div class="uk-grid uk-grid-match" data-uk-grid-margin="">
                <div class="uk-width-medium-1-1 uk-row-first">
                  <strong><%= f.label :email, class: "uk-form-label" %></strong>
                  <%= f.email_field :email, autofocus: true, class: "uk-width-1-1" %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="uk-form-row">
          <div class="uk-row">
            <div class="uk-container">
              <div class="uk-grid uk-grid-match" data-uk-grid-margin="">
                <div class="uk-width-medium-1-1 uk-row-first">
                  <strong><%= f.label :Contraseña, class: "uk-form-label" %></strong>
                  <%= f.password_field :password, autocomplete: "off", class: "uk-width-1-1" %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="uk-form-row">
            <div class="uk-row">
              <div class="uk-container">
                <div class="uk-grid uk-grid-match" data-uk-grid-margin="">
                  <div class="uk-width-medium-1-1 uk-row-first">
                    <strong><%= f.check_box :remember_me,  class: "uk-form-label" %></strong>
                    <%= f.label :Recordarme, class: "uk-width-1-1" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end -%>
        <div class="uk-form-row">
          <div class="uk-row">
            <div class="uk-container">
              <div class="uk-grid uk-grid-match" data-uk-grid-margin="">
                <div class="uk-width-medium-1-1 uk-row-first">
                  <%= f.submit 'Acceder', class: "uk-button uk-width-1-1 uk-button-primary uk-button-large" %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <hr class="uk-article-divider">
        <div class="uk-form-row">
          <div class="uk-row">
            <div class="uk-container">
              <div class="uk-grid uk-grid-match" data-uk-grid-margin="">
                <div class="uk-width-medium-1-1 uk-row-first">
                  <%= render "devise/shared/links" %>
                </div>
              </div>
            </div>
          </div>
        </div>
        
      <% end %>
    </article>
  </div>
</div>
