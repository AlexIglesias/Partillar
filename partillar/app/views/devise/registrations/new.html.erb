<div class="uk-width-medium-2-3 uk-container-center">
  <div class="uk-panel">
    <article class="uk-article">
      <h1 class="uk-article-title uk-text-center">Registro</h1>
      <hr class="uk-article-divider">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="uk-form-row">
        <div class="uk-row">
          <div class="uk-container">
            <div class="uk-grid uk-grid-match" data-uk-grid-margin="">
              <div class="uk-width-medium-1-1 uk-row-first">
                <strong><%= f.label :Nombre, class: "uk-form-label" %></strong>
                <%= f.text_field :name, autofocus: true, class: "uk-width-1-1" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="uk-form-row">
        <div class="uk-row">
          <div class="uk-container">
            <div class="uk-grid uk-grid-match" data-uk-grid-margin="">
              <div class="uk-width-medium-1-1 uk-row-first">
                <strong><%= f.label :email, class: "uk-form-label" %></strong>
                <%= f.email_field :email, autofocus: true, class: "uk-width-1-1" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="uk-form-row">
        <div class="uk-row">
          <div class="uk-container">
            <div class="uk-grid uk-grid-match" data-uk-grid-margin="">
              <div class="uk-width-medium-1-1 uk-row-first">
                <strong><%= f.label :Contraseña,  class: "uk-form-label" %></strong>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", class: "uk-width-1-1" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="uk-form-row">
        <div class="uk-row">
          <div class="uk-container">
            <div class="uk-grid uk-grid-match" data-uk-grid-margin="">
              <div class="uk-width-medium-1-1 uk-row-first">
                <%= f.label :Confirma_contraseña %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off" %>
                
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="uk-form-row">
        <div class="uk-row">
          <div class="uk-container">
            <div class="uk-grid uk-grid-match" data-uk-grid-margin="">
              <div class="uk-width-medium-1-1 uk-row-first">
                <%= f.submit 'Registrar', class: "uk-button uk-width-1-1 uk-button-primary uk-button-large" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <hr class="uk-article-divider">
      <div class="uk-form-row">
        <div class="uk-row">
          <div class="uk-container">
            <div class="uk-grid uk-grid-match" data-uk-grid-margin="">
              <div class="uk-width-medium-1-1 uk-row-first">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <% end %>
    </article>
  </div>
</div>