<div class="uk-width-medium-2-3 uk-container-center">
  <div class="uk-panel">
    <article class="uk-article">
      <h1 class="uk-article-title uk-text-center"><%= @infocard.title %></h1>
      <hr class="uk-article-divider">
      <p class="uk-article-meta">Fuente/Colaborador: <%= @infocard.source %>  </p>
      <p class="uk-article-meta">Categoría: <%= @infocard.category.name %></p>
      <hr class="uk-article-divider">
      <p>
        <strong>Localización:</strong>
        <%= @infocard.location.name %>
      </p>
      <hr class="uk-article-divider">
      <p>
        <strong>Descripción:</strong>
        <p><%= @infocard.description %></p>
      </p>
      <hr class="uk-article-divider">
      <p>
        <strong>Video/Audio:</strong>
        <a href=" <%= @infocard.media_url %>" data-uk-lightbox data-lightbox-type="video" class="uk-icon-hover uk-icon-play uk-icon-medium uk-button-large"></a>
      </p>
      
      <div class="uk-form-row">
        <div class="uk-block">
          <div class="uk-container">
            <div class="uk-grid uk-grid-match" data-uk-grid-margin="">
              <% if user_signed_in? %>
              <div class="uk-width-medium-1-2 uk-row-first">
                <%= link_to 'Ir al mapa', '/', class: "uk-button uk-width-1-1 uk-button-primary uk-button-large" %>
              </div>
              <div class="uk-width-medium-1-2">
                <%= link_to 'Ver perfil', show_path, class: "uk-button uk-width-1-1 uk-button-primary uk-button-large" %>
              </div>
              <% else %>
              <div class="uk-width-medium-1-2 uk-row-first">
                <%= link_to 'Volver atrás', '/', class: "uk-button uk-width-1-1 uk-button-primary uk-button-large" %>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </article>
  </div>
</div>